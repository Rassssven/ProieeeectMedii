@page
@model PrMediii.Pages.Modules.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Module</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Module.Title" class="control-label"></label>
                <input asp-for="Module.Title" class="form-control" />
                <span asp-validation-for="Module.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Module.Price" class="control-label"></label>
                <input asp-for="Module.Price" class="form-control" />
                <span asp-validation-for="Module.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Module.Duration" class="control-label"></label>
                <input asp-for="Module.Duration" class="form-control" />
                <span asp-validation-for="Module.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Module.PublishingDate" class="control-label"></label>
                <input asp-for="Module.PublishingDate" class="form-control" />
                <span asp-validation-for="Module.PublishingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Module.TrainerID" class="control-label"></label>
                <select asp-for="Module.TrainerID" class="form-control" asp-items="ViewBag.TrainerID"></select>
                <span asp-validation-for="Module.TrainerID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                 foreach (var cat in Model.AssignedCoursesDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                                name="selectedCategories"
                                                value="@cat.CourseID"
                                                @(Html.Raw(cat.Assigned ?
"checked=\"checked\"" : "")) />
                                        @cat.CourseID @: @cat.Name
                                    @:</td>
                                }
                        @:</tr>
                            }
                        </table>
                    </div>
                </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
